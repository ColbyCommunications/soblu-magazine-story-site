{
    "name": "@colbycommunications/colby-solbu-site",
    "version": "1.0.1",
    "description": "A app for the SOBLU story",
    "main": "dist/index.js",
    "author": "Brandon K. Waltz",
    "license": "MIT",
    "peerDependencies": {},
    "scripts": {
        "sass": "node-sass --watch src/app.scss -o dist",
        "sassProd": "node-sass src/app.scss -o dist",
